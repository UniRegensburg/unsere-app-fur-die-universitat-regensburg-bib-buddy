<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="@color/library_item_selector"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingHorizontal="8dp">

        <ImageButton
            android:id="@+id/play_note"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/stop_note"
            android:background="@null"
            android:contentDescription="@string/play_note"
            android:scaleType="fitXY"
            android:src="@drawable/icon_play"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/stop_note"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_toStartOf="@+id/noteType"
            android:background="@null"
            android:contentDescription="@string/stop_note"
            android:scaleType="fitXY"
            android:src="@drawable/icon_stop"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/noteType"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/description_text_note"
            android:src="@drawable/document" />

        <TextView
            android:id="@+id/noteName"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title" />

        <TextView
            android:id="@+id/noteModDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="12sp" />

        <com.chibde.visualizer.LineBarVisualizer
            android:id="@+id/notesVisualizer"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_toStartOf="@+id/play_note"
            android:visibility="invisible" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
