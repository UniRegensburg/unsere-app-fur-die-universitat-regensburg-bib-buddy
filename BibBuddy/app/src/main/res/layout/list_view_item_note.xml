<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="@color/library_item_selector"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingHorizontal="8dp">

        <ImageButton
            android:id="@+id/play_note"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/stop_note"
            android:background="@null"
            android:contentDescription="@string/play_note"
            android:scaleType="fitXY"
            android:src="@drawable/icon_play"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/stop_note"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_toStartOf="@+id/noteType"
            android:background="@null"
            android:contentDescription="@string/stop_note"
            android:scaleType="fitXY"
            android:src="@drawable/icon_stop"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/noteType"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/description_text_note"
            android:src="@drawable/document" />

        <TextView
            android:id="@+id/noteName"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title" />

        <TextView
            android:id="@+id/noteModDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/voice_note_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/playedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:text="@string/default_played_time"
            android:textSize="12sp"
            android:translationX="230dp"
            android:translationY="-10dp" />

        <TextView
            android:id="@+id/totalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:textSize="12sp"
            android:translationX="365dp"
            android:translationY="-10dp" />

        <app.minimize.com.seek_bar_compat.SeekBarCompat
            android:id="@+id/progressBar"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:translationX="30dp"
            app:progressBackgroundColor="@null"
            app:progressColor="@color/teal_700"
            app:thumbAlpha="1.0"
            app:thumbColor="@color/tiffany" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
