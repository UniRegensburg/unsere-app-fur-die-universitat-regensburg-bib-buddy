<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_book_notes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:translationY="100dp">

    <!--    book view  -->
    <RelativeLayout
        android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/image_book"
            android:layout_width="60dp"
            android:layout_height="105dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_book" />

        <TextView
            android:id="@+id/text_view_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/image_book"
            android:text="TODO Buchtitel"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/note_pen_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/text_view_book"
            android:layout_toEndOf="@+id/image_book"
            android:src="@drawable/pen" />

        <TextView
            android:id="@+id/note_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_book"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/note_pen_icon"
            android:text="@string/navigation_notes"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_name"
            android:layout_toEndOf="@id/image_book"
            android:text="@string/back"
            android:theme="@style/Button.Grey" />

        <Button
            android:id="@+id/btn_add_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_name"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/btn_back"
            android:text="@string/add_note"
            android:theme="@style/Button.Pink" />
    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:tools="https://schemas.android.com/tools"
        android:id="@+id/coordinatorLayoutBookNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".NotesFragment"
        android:layout_below="@id/book">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bookNotesViewRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <TextView
                android:id="@+id/empty_notelist_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/empty_list"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>
