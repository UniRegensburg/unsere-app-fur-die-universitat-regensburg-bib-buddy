<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_author"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="75dp"
    >


    <TextView
        android:id="@+id/list_view_author_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="58dp"
        android:layout_marginRight="20dp"
        android:text="@string/author_help"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:visibility="gone"
        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_author"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/author_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layoutManager="LinearLayoutManager"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_add_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@android:dimen/thumbnail_width"
            android:layout_marginBottom="@dimen/list_item_height"
            android:clickable="true"
            android:contentDescription="@string/add_author_btn"
            android:focusable="true"
            android:theme="@style/Button.Pink"
            android:tooltipText="@string/add_author_tooltip"
            app:maxImageSize="40dp"
            app:srcCompat="@android:drawable/ic_input_add"
            tools:targetApi="o"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_confirm_authors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btn_add_author"
            android:layout_marginStart="@android:dimen/app_icon_size"
            android:clickable="true"
            android:contentDescription="@string/confirm"
            android:focusable="true"
            android:theme="@style/Button.Mint"
            android:tooltipText="@string/confirm"
            app:maxImageSize="40dp"
            app:srcCompat="@drawable/ic_check"
            tools:targetApi="o"
            />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
