<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_book"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/library_item_selector"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/person_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/description_book"
            android:padding="5dp"
            android:src="@drawable/ic_book" />

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/person_icon"
            android:text="Medium Text"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_authors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_title"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/person_icon"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/book_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_authors"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/person_icon"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/image_book_note"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/book_year"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/person_icon"
            android:contentDescription="@string/description_note"
            android:src="@drawable/pen" />

        <TextView
            android:id="@+id/note_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_year"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/image_book_note"
            android:padding="2dp"
            android:text="@string/navigation_notes"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
