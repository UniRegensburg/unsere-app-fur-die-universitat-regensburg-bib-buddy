<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_notes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:forceHasOverlappingRendering="true"
    android:translationY="80dp"
    android:layout_marginBottom="160dp"
    android:weightSum="3" >

    <ImageButton
        android:id="@+id/stop"
        android:layout_marginStart="30dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:background="@null"
        android:contentDescription="@string/circle_stop"
        android:scaleType="fitCenter"
        android:src="@drawable/stop" />

    <ImageButton
        android:id="@+id/play"
        android:layout_marginEnd="30dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:contentDescription="@string/circle_play"
        android:scaleType="fitCenter"
        android:src="@drawable/play" />

    <com.chibde.visualizer.LineBarVisualizer
        android:id="@+id/visualizer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:translationY="400dp" />

    <com.skyfishjy.library.RippleBackground
        android:id="@+id/pulsator"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:alpha="1"
        app:rb_color="@color/flirt"
        app:rb_duration="3000"
        app:rb_radius="14dp"
        app:rb_strokeWidth="10dp"
        app:rb_rippleAmount="10"
        app:rb_scale="6">

        <ImageButton
            android:id="@+id/record"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:contentDescription="@string/record_microphone"
            android:scaleType="fitCenter"
            android:src="@drawable/record_microphone" />

    </com.skyfishjy.library.RippleBackground>


</RelativeLayout>





