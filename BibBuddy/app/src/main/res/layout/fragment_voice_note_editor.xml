<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_notes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="160dp"
    android:forceHasOverlappingRendering="true"
    android:translationY="80dp"
    android:weightSum="3">

    <ImageButton
        android:id="@+id/stop"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:background="@null"
        android:contentDescription="@string/circle_stop"
        android:scaleType="fitCenter"
        android:src="@drawable/stop" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:background="@null"
        android:contentDescription="@string/circle_play"
        android:scaleType="fitCenter"
        android:src="@drawable/play" />

    <RelativeLayout
        android:id="@+id/voice_note_editor_player"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:translationY="400dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/played_time_voice_note_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/seekBar_voice_note_editor"
            android:text="@string/default_played_time"
            android:textSize="12sp"
            android:translationX="50dp"
            android:translationY="-10dp" />

        <TextView
            android:id="@+id/total_time_voice_note_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/seekBar_voice_note_editor"
            android:textSize="12sp"
            android:translationX="-50dp"
            android:translationY="-10dp" />

        <app.minimize.com.seek_bar_compat.SeekBarCompat
            android:id="@+id/seekBar_voice_note_editor"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <com.skyfishjy.library.RippleBackground
        android:id="@+id/pulsator"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:alpha="1"
        android:scaleType="fitCenter"
        app:rb_color="@color/flirt"
        app:rb_duration="3000"
        app:rb_radius="14dp"
        app:rb_rippleAmount="10"
        app:rb_scale="6"
        app:rb_strokeWidth="10dp">

        <ImageButton
            android:id="@+id/record"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:contentDescription="@string/record_microphone"
            android:scaleType="fitCenter"
            android:src="@drawable/record_microphone" />

    </com.skyfishjy.library.RippleBackground>

</RelativeLayout>





